html
  head
    title= Login
    style.
        .login {
            margin: 0 auto;
            width: 300px;
            padding: 0 10px;
            display: flex;
            flex-direction: column;
        }
        .login h1 {
            text-align: center;
        }
        .login button {
            font-family: Montserrat-Bold;
            font-size: 15px;
            font-weight: 600;
            line-height: 1.5;
            color: #fff;
            text-transform: uppercase;
            width: 100%;
            height: 50px;
            background: #57b846;
            border-radius: 25px;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 0 25px;
            transition: all 0.4s;
            text-decoration: none;
            margin-top: 10px;
        }
        .login button:hover {
            background: #333333;
        }
        .login a {
            font-family: Montserrat-Bold;
            font-size: 15px;
            font-weight: 600;
            line-height: 1.5;
            color: #fff;
            text-transform: uppercase;
            width: 250px;
            height: 50px;
            background: #333333;
            border-radius: 25px;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 0 25px;
            transition: all 0.4s;
            text-decoration: none;
            margin-bottom: 10px;
        }
        .login a:hover {
            background: #57b846;
        }
  body
     form.login
        h1 Авторизуйтесь
        label(for="name") Логин
        input(type="text" name="login" id="name" value='')
        label(for="password") Пароль
        input(type="password" id="password" name="password" value='')
        button Открыть чат
        p.status
        a(href="/registration") Зарегистрироваться
     script.
        const status = document.querySelector('.status');
        const form = document.querySelector('form');
        form.addEventListener('submit', (evt) => {
            evt.preventDefault();
            const data = {
                login: document.querySelector('#name').value,
                password: document.querySelector('#password').value
            };
            console.log(data);

            fetch('/login',  {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data),
            })
                .then((res)=> res.json())
                .then((res)=> {
                    console.log(res);
                    if (res === 'ok') {
                        window.location.href = '/'
                    } else {
                        status.textContent = res;
                    }
                })
                .catch((err)=>{status.textContent = err;});
        });